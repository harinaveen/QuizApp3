<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home_Page"
    android:orientation="vertical"
    android:background="@drawable/flower_wall" >
    
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to Programming "
        android:textSize="20sp"
        android:textColor="@color/light_blue"
        android:shadowColor="@color/yellow"
        android:shadowRadius="4"
        android:typeface="serif"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" and Aptitude Test"
        android:textSize="20sp"
       	android:textColor="@color/light_blue"
        android:shadowColor="@color/yellow"
        android:shadowRadius="4"
        android:typeface="serif"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:src="@drawable/line1" />
   
    <TextView
        android:id="@+id/tvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:text="Select Any Skill to TEST  : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_technical"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:src="@drawable/pro_lan_logo" />
    <TextView
        android:id="@+id/tvvv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Technical Quiz"
        android:textSize="14sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:shadowColor="@color/yellow"
        android:shadowDy="10"
        android:shadowRadius="2" />
    
    <ImageView
        android:id="@+id/img_aptitude"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:src="@drawable/apti_logo" />
    <TextView
        android:id="@+id/tvvv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Aptitude Test"
        android:textSize="14sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/dark_red"
        android:shadowColor="@color/yellow"
        android:shadowDy="10"
        android:shadowRadius="2" />

</LinearLayout>